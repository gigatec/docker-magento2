#!/usr/bin/env bash

MAGEDIR=/var/www/html

su www-data <<EOSU

    echo "downloading Magento $MAGENTO_VERSION"
    cd /tmp && curl https://codeload.github.com/magento/magento2/tar.gz/$MAGENTO_VERSION -o $MAGENTO_VERSION.tar.gz && tar xvf $MAGENTO_VERSION.tar.gz && mv magento2-$MAGENTO_VERSION/* magento2-$MAGEN
TO_VERSION/.htaccess /var/www/html

EOSU
