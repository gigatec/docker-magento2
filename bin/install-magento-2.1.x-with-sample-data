#!/usr/bin/env bash

MAGEDIR=/var/www/html

cd $MAGEDIR

echo "Downloading Sample Data"
wget https://codeload.github.com/magento/magento2-sample-data/tar.gz/${MAGENTO_VERSION} -O sample-data.tar.gz

tar -xvf sample-data.tar.gz

cd magento2-sample-data-*

php -f dev/tools/build-sample-data.php -- --ce-source="$MAGEDIR"

cd $MAGEDIR

chown -R www-data:www-data $MAGEDIR

rm -f sample-data.tar.gz

# install magento
/usr/local/bin/install-magento

bin/magento deploy:mode:set developer

bin/magento setup:upgrade
bin/magento cache:flush

chown -R www-data:www-data $MAGEDIR
